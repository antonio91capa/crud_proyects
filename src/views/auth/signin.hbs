<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Signin</h3>
                </div>
                <div class="card-body">
                    <img src="https://s2.logaster.com/static/v3/img/products/logo.png" alt="Image logo"
                        class="card-img-top mx-auto m-2 rounded-circle w-50">
                    <form action="/signin" method="post">
                        <div class="form-group">
                            <input type="text" name="username" placeholder="Username"
                                class="form-control" autofocus autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control"
                                placeholder="Password">
                        </div>
                        <button class="btn btn-success btn-block">Signin</button>
                    </form>
                    <p>Or <a href="/signup"> Create a new Account</a></p>
                </div>
            </div>
        </div>
    </div>
</div>