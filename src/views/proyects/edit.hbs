<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/proyects/edit/{{proyect.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" name="name" value="{{proyect.name}}" class="form-control" placeholder="Name" autofocus>
                        </div>
                        <div class="form-group">
                            <textarea name="description" value="{{proyect.description}}" rows="2" class="form-control" 
                                placeholder="Description"></textarea>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="status">
                                <option selected>{{proyect.status}}</option>
                                <option value="InProcess">In Process</option>
                                <option value="Completed">Completed</option>
                                <option value="Incompleted">Incompleted</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>