<div class="container p-4">
    <div class="row" id="info">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>created_at</th>
                    <th>status</th>
                    <th colspan="2">Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each proyects}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{name}}</td>
                    <td>{{description}}</td>
                    <td>{{timeago created_at}}</td>
                    <td>{{status}}</td>
                    <td><a href="/proyects/edit/{{id}}" class="btn btn-secondary">Editar</a></td>
                    <td><a href="/proyects/delete/{{id}}" class="btn btn-danger">Eliminar</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>

